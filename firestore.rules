rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Enforces user-level access control for user profiles.
     * @path /users/{userId}
     * @allow (create) User with UID 'user_abc' can create their own profile.
     * @allow (get) User with UID 'user_abc' can read their own profile.
     * @allow (update) User with UID 'user_abc' can update their own profile.
     * @allow (delete) User with UID 'user_abc' can delete their own profile.
     * @deny (create) User with UID 'user_xyz' cannot create a profile with ID 'user_abc'.
     * @deny (get) User with UID 'user_xyz' cannot read profile 'user_abc'.
     * @principle Enforces document ownership and prevents unauthorized access to user data.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Listing users is not permitted.
      allow create: if isSignedIn() && isOwner(userId) ;
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Enforces user-level access control for IFC models within a user's profile.
     * @path /users/{userId}/ifcModels/{ifcModelId}
     * @allow (create) User with UID 'user_abc' can create an IFC model under their profile.
     * @allow (get) User with UID 'user_abc' can read an IFC model under their profile.
     * @allow (update) User with UID 'user_abc' can update their IFC model.
     * @allow (delete) User with UID 'user_abc' can delete an IFC model under their profile.
     * @deny (create) User with UID 'user_xyz' cannot create an IFC model under user 'user_abc''s profile.
     * @deny (get) User with UID 'user_xyz' cannot read an IFC model under user 'user_abc''s profile.
     * @principle Enforces document ownership and prevents unauthorized access to IFC models.
     */
    match /users/{userId}/ifcModels/{ifcModelId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Enforces user-level access control for analysis results within an IFC model.
     * @path /users/{userId}/ifcModels/{ifcModelId}/analysisResults/{analysisResultId}
     * @allow (create) User with UID 'user_abc' can create an analysis result under their IFC model.
     * @allow (get) User with UID 'user_abc' can read an analysis result under their IFC model.
     * @allow (update) User with UID 'user_abc' can update an analysis result under their IFC model.
     * @allow (delete) User with UID 'user_abc' can delete an analysis result under their IFC model.
     * @deny (create) User with UID 'user_xyz' cannot create an analysis result under user 'user_abc''s IFC model.
     * @deny (get) User with UID 'user_xyz' cannot read an analysis result under user 'user_abc''s IFC model.
     * @principle Enforces document ownership and prevents unauthorized access to analysis results.
     */
    match /users/{userId}/ifcModels/{ifcModelId}/analysisResults/{analysisResultId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Enforces user-level access control for chat messages within a user's profile.
     * @path /users/{userId}/messages/{messageId}
     * @allow (create) User with UID 'user_abc' can create a chat message under their profile.
     * @allow (get) User with UID 'user_abc' can read a chat message under their profile.
     * @allow (update) User with UID 'user_abc' can update a chat message under their profile.
     * @allow (delete) User with UID 'user_abc' can delete a chat message under their profile.
     * @deny (create) User with UID 'user_xyz' cannot create a chat message under user 'user_abc''s profile.
     * @deny (get) User with UID 'user_xyz' cannot read a chat message under user 'user_abc''s profile.
     * @principle Enforces document ownership and prevents unauthorized access to chat messages.
     */
    match /users/{userId}/messages/{messageId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }
  }
}