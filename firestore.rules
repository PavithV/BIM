rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user documents.  Users can only read and write their own document.
     * @path /users/{userId}
     * @allow (create) - User abc can create their own user document if authenticated as abc.
     *   `request.auth.uid == 'abc'` and `request.resource.data.id == 'abc'`
     * @allow (get) - User abc can read their own user document if authenticated as abc.
     *   `request.auth.uid == 'abc'`
     * @allow (update) - User abc can update their own user document if authenticated as abc.
     *   `request.auth.uid == 'abc'` and `resource.data.id == 'abc'`
     * @allow (delete) - User abc can delete their own user document if authenticated as abc.
     *   `request.auth.uid == 'abc'` and `resource.data.id == 'abc'`
     * @deny (create) - User def cannot create a user document for abc.
     *   `request.auth.uid == 'def'` but the path is `/users/abc`.
     * @deny (update) - User def cannot update user abc's document.
     *   `request.auth.uid == 'def'` but the path is `/users/abc`.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && existsAfter(/databases/$(database)/documents/users/$(userId));
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to IFC models.  Users can only read and write models they own.
     * @path /users/{userId}/ifcModels/{ifcModelId}
     * @allow (create) - User abc can create an IFC model under their user document if authenticated as abc.
     *   `request.auth.uid == 'abc'` and `request.resource.data.userId == 'abc'`
     * @allow (get) - User abc can read their own IFC model if authenticated as abc.
     *   `request.auth.uid == 'abc'`
     * @allow (update) - User abc can update their own IFC model if authenticated as abc.
     *   `request.auth.uid == 'abc'` and `resource.data.userId == 'abc'`
     * @allow (delete) - User abc can delete their own IFC model if authenticated as abc.
     *   `request.auth.uid == 'abc'` and `resource.data.userId == 'abc'`
     * @deny (create) - User def cannot create an IFC model under user abc's document.
     *   `request.auth.uid == 'def'` but the path is `/users/abc/ifcModels/{ifcModelId}`.
     * @deny (update) - User def cannot update user abc's IFC model.
     *   `request.auth.uid == 'def'` but the path is `/users/abc/ifcModels/{ifcModelId}`.
     * @principle Enforces document ownership for all operations.  Also validates data consistency.
     */
    match /users/{userId}/ifcModels/{ifcModelId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

        function isExistingOwner(userId) {
          return isOwner(userId) && existsAfter(/databases/$(database)/documents/users/$(userId)/ifcModels/$(ifcModelId));
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to analysis results.  Users can only read and write results for models they own.
     * @path /users/{userId}/ifcModels/{ifcModelId}/analysisResults/{analysisResultId}
     * @allow (create) - User abc can create an analysis result under their IFC model if authenticated as abc.
     *   `request.auth.uid == 'abc'`
     * @allow (get) - User abc can read their own analysis result if authenticated as abc.
     *   `request.auth.uid == 'abc'`
     * @allow (update) - User abc can update their own analysis result if authenticated as abc.
     *   `request.auth.uid == 'abc'`
     * @allow (delete) - User abc can delete their own analysis result if authenticated as abc.
     *   `request.auth.uid == 'abc'`
     * @deny (create) - User def cannot create an analysis result under user abc's IFC model.
     *   `request.auth.uid == 'def'` but the path is `/users/abc/ifcModels/{ifcModelId}/analysisResults/{analysisResultId}`.
     * @deny (update) - User def cannot update user abc's analysis result.
     *   `request.auth.uid == 'def'` but the path is `/users/abc/ifcModels/{ifcModelId}/analysisResults/{analysisResultId}`.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/ifcModels/{ifcModelId}/analysisResults/{analysisResultId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

        function isExistingOwner(userId) {
          return isOwner(userId) && existsAfter(/databases/$(database)/documents/users/$(userId)/ifcModels/$(ifcModelId)/analysisResults/$(analysisResultId));
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }
  }
}