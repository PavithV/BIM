/**
 * @file Firestore Security Rules for BIMCoach Studio
 * @core_philosophy This ruleset enforces a strict user-ownership model, ensuring that users can only access their own data.
 * @data_structure All data is nested under /users/{userId}, reflecting the ownership of IFC models, analysis results, and chat messages.
 * @key_security_decisions User listing is disallowed for privacy.  Every write operation requires authentication and ownership validation. Data shape validation is relaxed for prototyping, but critical ownership fields are strictly validated.
 * @denormalization Authorization decisions are based on the path and the authenticated user's ID, avoiding the need for complex queries or `get()` calls to other documents.
 * @structural_segregation There is no need for structural segregation as there are no publicly available documents.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Rule for the root of the database - to prevent full database reads.
     * @path /databases/{database}/documents
     * @allow (get, list) if false - No one can read the root of the database.
     * @deny (create, update, delete) - No one can write to the root of the database.
     * @principle Protects against unauthorized data access at the root level.
     */
    match /{document=**} {
      allow get: if false;
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Secures the /users/{userId} document.
     * @path /users/{userId}
     * @allow (get) User can read their own user document.
     * @allow (create) User can create their own user document, only on sign-up.
     * @allow (update) User can update their own user document.
     * @allow (delete) User can delete their own user document.
     * @deny (get) if request.auth.uid != userId - User cannot read another user's document.
     * @deny (create) if request.auth.uid != userId - User cannot create another user's document.
     * @deny (update) if request.auth.uid != userId - User cannot update another user's document.
     * @deny (delete) if request.auth.uid != userId - User cannot delete another user's document.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Disallow user listing
      allow create: if isSignedIn() && isSelfCreation(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures the /users/{userId}/ifcModels/{ifcModelId} document.
     * @path /users/{userId}/ifcModels/{ifcModelId}
     * @allow (get) User can read their own IFC model.
     * @allow (create) User can create their own IFC model.
     * @allow (update) User can update their own IFC model.
     * @allow (delete) User can delete their own IFC model.
     * @deny (get) if request.auth.uid != userId - User cannot read another user's IFC model.
     * @deny (create) if request.auth.uid != userId - User cannot create another user's IFC model.
     * @deny (update) if request.auth.uid != userId - User cannot update another user's IFC model.
     * @deny (delete) if request.auth.uid != userId - User cannot delete another user's IFC model.
     * @principle Enforces document ownership for IFC models.
     */
    match /users/{userId}/ifcModels/{ifcModelId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures the /users/{userId}/ifcModels/{ifcModelId}/analysisResults/{analysisResultId} document.
     * @path /users/{userId}/ifcModels/{ifcModelId}/analysisResults/{analysisResultId}
     * @allow (get) User can read their own Analysis Result.
     * @allow (create) User can create their own Analysis Result.
     * @allow (update) User can update their own Analysis Result.
     * @allow (delete) User can delete their own Analysis Result.
     * @deny (get) if request.auth.uid != userId - User cannot read another user's Analysis Result.
     * @deny (create) if request.auth.uid != userId - User cannot create another user's Analysis Result.
     * @deny (update) if request.auth.uid != userId - User cannot update another user's Analysis Result.
     * @deny (delete) if request.auth.uid != userId - User cannot delete another user's Analysis Result.
     * @principle Enforces document ownership for Analysis Results.
     */
    match /users/{userId}/ifcModels/{ifcModelId}/analysisResults/{analysisResultId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn();
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures the /users/{userId}/messages/{messageId} document.
     * @path /users/{userId}/messages/{messageId}
     * @allow (get) User can read their own chat message.
     * @allow (create) User can create their own chat message.
     * @allow (update) User can update their own chat message.
     * @allow (delete) User can delete their own chat message.
     * @deny (get) if request.auth.uid != userId - User cannot read another user's chat message.
     * @deny (create) if request.auth.uid != userId - User cannot create another user's chat message.
     * @deny (update) if request.auth.uid != userId - User cannot update another user's chat message.
     * @deny (delete) if request.auth.uid != userId - User cannot delete another user's chat message.
     * @principle Enforces document ownership for chat messages.
     */
    match /users/{userId}/messages/{messageId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId);
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
    }
    
    function isSelfCreation(userId) {
        return isSignedIn() && request.auth.uid == userId;
    }
  }
}